#include<stdio.h>
#include<string.h>
#include<ctype.h>
#include<math.h>
#include<stdlib.h>
#include<stdbool.h>
#include<conio.h>
int main()
{
	char str[100+1];
	printf("INSERISCI PAROLA:\n");
	fgets(str, sizeof(str), stdin);
	int len=strlen(str);
	int cont[26], i, k, pos[100+1], j;
	for(i=0; i<26; i++)
    	cont[i]=i;
	i=0;
	j=1;
	while(i<26){
		for(k=0; str[k]!='\0'; k++){
		        str[k]=tolower(str[k]);
			if(cont[i]==str[k]-'a'){
    		    pos[k]=j;
    		    j++;
	        }
		}
		i++;
	}
	printf("NUMERI CORRISPONDENTI:\n");
	for(k=0; k<len-1; k++){
		if(!isblank(str[k]) && !isblank(str[k+1]) && k<len-2)
			printf("%u-", pos[k]);
		else if(!isblank(str[k]))
			printf("%u", pos[k]);
	}
	printf("\n");
	printf("TABELLA:\n\n");
	for(k=0; str[k]!='\0'; k++){
		str[k]=toupper(str[k]);
		if(k<len-1)
		    printf("  %c  ", str[k]);
	}
	printf("\n");
	for(k=0; k<len-1; k++){
		if(!isblank(str[k]))
		    printf("  -  "); 
	}
	printf("\n");
	for(k=0; k<len-1; k++){
		if(!isblank(str[k]) && pos[k]<10)
		    printf("  %u  ", pos[k]);
	    else if(!isblank(str[k]))
	        printf("  %u ", pos[k]);
	}
}
